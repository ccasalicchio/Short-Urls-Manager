@model Shorten_Urls.Models.Url
@using Shorten_Urls.Models

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details for @Model.Src</h2>

<div>
    <h4>Url</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Src)
        </dt>

        <dd>
            <input class="copyButton form-control" title="Click to copy" value="@(Helpers.GetCurrentDomain() + "/" + Model.Src)">
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Redirect)
        </dt>

        <dd>
            <a href="@Model.Redirect" target="_blank">@Model.Redirect</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Expires)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Expires)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "List")
</p>
