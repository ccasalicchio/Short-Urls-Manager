@model IEnumerable<Shorten_Urls.Models.Url>
@using Shorten_Urls.Models

@{
    ViewBag.Title = "Urls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of @MvcApplication.Website_Name (short urls)</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Src)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Redirect)
        </th>
        <th>
            Created By
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expires)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input class="copyButton form-control" title="Click to copy" value="@(Helpers.GetCurrentDomain() + "/" + item.Src)">
            </td>
            <td>
                <a href="@item.Redirect" target="_blank">@item.Redirect</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expires)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
